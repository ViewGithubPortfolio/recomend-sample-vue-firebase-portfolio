{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.index.json"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "emulators": {
    "firestore": {
      "port": 2000
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true,
      "port": 9999
    },
    "singleProjectMode": true
  }
}
